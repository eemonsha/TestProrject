@model TestProrject.Models.Department
@{
    ViewData["Title"] = "DepartmentCreate";
}

<h1>DepartmentCreate</h1>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="card card-primary mt-5">
        <div class="card-header">
            <h3 class="card-title">Department Create</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="DepartmentCreate">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputPassword1">Department Name</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="DepartmentName" asp-for="DepartmentName">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Department Score</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Score" asp-for="DepartmentScore">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Department Credit Price</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Score" asp-for="DepartmentCreditPrice">
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>