            });

        </script>*@

    @section Scripts {
        <script src="https://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>

        <script>
            $('#BB').keyup(function () {
                var qty = $('#BB').val();
                $('#RB').val(qty);
            });


            $(document).ready(function () {
                $('#deepart').select2();
            });
        </script>


        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>



